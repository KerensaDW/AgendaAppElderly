@page
@model AgendaApp.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div id="login" class="container">
    <h3>
        @ViewData["Title"]
    </h3>
    <div class="loginform">
        <form id="account" method="post">
            <div asp-validation-summary="All" class="text-danger font-weight-bold"></div>

            <div class="form-group">
                <label asp-for="Input.UserName">Gebruikersnaam</label>
                <input asp-for="Input.UserName" class="form-control" placeholder="gebruikersnaam"/>
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Wachtwoord</label>
                <input asp-for="Input.Password" class="form-control" placeholder="*************"/>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group loginknop">
                <button type="submit" class="btn btn-success " id="button">Inloggen</button>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(function () {
            localStorage.clear();
        })
    </script>

}